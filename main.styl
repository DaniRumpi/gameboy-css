body
  background #09cbe4

#gameboy
  position relative
  width 150px
  height 250px
  margin 10px auto
  overflow hidden
  background #EEE
  border-radius 10px 10px 30px 10px
  box-shadow 5px 5px rgba(0, 0, 0, 0.1)

  &:before
    content ""
    position absolute
    width 250px
    height 10px
    border-bottom 2px solid #E0E0E0

  &:after
    content ""
    position absolute
    width 120px
    height 10px
    left 13px
    border-left 2px solid #E0E0E0
    border-right 2px solid #E0E0E0

.screen
  position absolute
  width 126px
  height 105px
  top 20px
  left 12px
  background #777
  border-radius 5px 5px 20px 5px
  &:before
    content ""
    position absolute
    width 80px
    height 80px
    top 13px
    left 23px
    background #bdae58
    box-shadow inset 2px 2px rgba(0, 0, 0, 0.15)
  &:after
    content ""
    position absolute
    width 4px
    height 4px
    top 45px
    left 9px
    background #B00
    border-radius 100%

.arrows
  &:before
    content ""
    position absolute
    z-index 3
    top 165px
    left 27px
    width 10px
    height 10px
    background-color #3a3a3a
    border-radius 100%
  .horizontal
    position absolute
    width 14px
    height 40px
    top 150px
    left 25px
    background #444
    border-radius 3px
    z-index 2
    &:after
      content ""
      position relative
      top -22px
      left -2px
      width 0
      height 0
      border-left 3px solid transparent
      border-right 3px solid transparent
      border-bottom 3px solid #dedede
    &:before
      content ""
      position relative
      top 44px
      left 4px
      width 0
      height 0
      border-top 3px solid #dedede
      border-left 3px solid transparent
      border-right 3px solid transparent
  .vertical
    position absolute
    width 14px
    height 40px
    top 150px
    left 25px
    background #444
    border-radius 3px
    z-index 2
    -webkit-transform rotate(90deg)
    &:after
      content ""
      position relative
      top -22px
      left -2px
      width 0
      height 0
      border-left 3px solid transparent
      border-right 3px solid transparent
      border-bottom 3px solid #dedede
    &:before
      content ""
      position relative
      top 44px
      left 4px
      width 0
      height 0
      border-top 3px solid #dedede
      border-left 3px solid transparent
      border-right 3px solid transparent

.btnAB
  content ""
  position absolute
  width 25px
  height 50px
  top 144.5px
  left 105px
  background #DFDFDF
  border-radius 12px
  -webkit-transform rotate(60deg)
  &:before
    content ""
    position absolute
    width 17px
    height 17px
    top 29px
    right 4px
    background #A93671
    box-shadow 18px -18px #A93671
    border-radius 100%
    -webkit-transform rotate(-45deg)

.btnStartSelect
  position absolute
  height 25px
  width 4px
  bottom 25px
  left 55px
  background #999
  border-radius 10px
  -webkit-transform rotate(60deg)
  box-shadow 14px -24px #999, 0px 0px 0px 3px #dfdfdf, 14px -24px 0px 3px #dfdfdf

.sound
  content ""
  position absolute
  height 24px
  width 3px
  top 223px
  left 107px
  background #DDD
  border-radius 2px
  -webkit-transform rotate(-30deg)
  box-shadow 7px 0 #DDD, 14px 0 #DDD, 21px 0 #DDD, 28px 0 #DDD, 35px 0 #DDD

